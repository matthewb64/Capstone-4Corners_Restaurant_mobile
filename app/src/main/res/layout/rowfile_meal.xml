<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Indian Butter Chicken"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image"
                android:layout_height="80dp"
                android:src="@drawable/butter"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/price"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="$345"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/addFavorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingStart="16dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="16dp"
                    android:textColor="#FFF"
                    android:background="@drawable/ic_favorite_red"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:scaleType="fitXY" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/description"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Butter chicken, traditionally known as murgh makhani, is an Indian dish originating in New Delhi."
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_border" />

</LinearLayout>